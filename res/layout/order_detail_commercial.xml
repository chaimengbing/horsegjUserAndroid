<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/x10"
    android:paddingTop="@dimen/x10"
    android:paddingLeft="@dimen/x15"
    android:paddingRight="@dimen/x15"
    android:paddingBottom="@dimen/x10">

    <RelativeLayout
        android:id="@+id/order_detail_commercial_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.project.mgjandroid.ui.view.RoundImageView
            android:id="@+id/order_detail_commercial_img"
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/x30"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/order_detail_commercial_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:layout_toRightOf="@id/order_detail_commercial_img"
            tools:text="@string/merchants_name"
            android:textColor="@color/color_3"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/order_detail_commercial_name_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_into"
            android:scaleType="centerCrop" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/x10"
        android:background="@color/gray_bg" />

    <LinearLayout
        android:id="@+id/order_detail_commercial_meal_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/x10"
        android:background="@color/gray_bg" />

    <LinearLayout
        android:id="@+id/order_detail_commercial_ship_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/x10"
        android:background="@color/gray_bg" />

    <LinearLayout
        android:id="@+id/order_detail_commercial_campaigns_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x10">

        <TextView
            android:id="@+id/order_detail_commercial_buy_again"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x30"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:minWidth="@dimen/x70"
            android:background="@drawable/shap_gray_range_bg"
            android:text="@string/order_again"
            android:textColor="@color/color_3"
            android:visibility="gone"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/order_detail_commercial_meal_all_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            tools:text="19"
            android:textColor="@color/color_3"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/order_detail_commercial_meal_all_money_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥"
            android:textSize="12sp"
            android:layout_centerVertical="true"
            android:paddingTop="@dimen/x3"
            android:textColor="@color/color_3"
            android:layout_alignBottom="@id/order_detail_commercial_meal_all_money"
            android:layout_toLeftOf="@id/order_detail_commercial_meal_all_money" />

        <TextView
            android:id="@+id/order_detail_commercial_meal_all_goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="合计："
            android:layout_centerVertical="true"
            android:textColor="@color/color_6"
            android:paddingTop="@dimen/x3"
            android:textSize="12sp"
            android:layout_alignBottom="@id/order_detail_commercial_meal_all_money"
            android:layout_toLeftOf="@id/order_detail_commercial_meal_all_money_sign" />
    </RelativeLayout>

</LinearLayout>