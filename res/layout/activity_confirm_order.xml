                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/x15"
                            android:button="@drawable/gender_edit_selector" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/common_gray_line" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x6" />

                    <RelativeLayout
                        android:id="@+id/pay_type_layout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/mine_list_height"
                        android:background="@color/white">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@color/common_gray_line"

                            />

                        <TextView
                            android:id="@+id/tv_pay_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/x15"
                            android:text="支付方式"
                            android:textColor="@color/color_3"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/pay_type_right_arrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:paddingLeft="@dimen/x5"
                            android:paddingRight="@dimen/x15"
                            android:src="@drawable/arrow_right_gray" />

                        <TextView
                            android:id="@+id/tv_pay_type_show"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/x30"
                            android:layout_toLeftOf="@id/pay_type_right_arrow"
                            android:layout_toRightOf="@id/tv_pay_type"
                            android:ellipsize="end"
                            android:gravity="right"
                            android:hint="在线支付"
                            android:singleLine="true"
                            android:textColor="@color/color_6"
                            android:textColorHint="@color/color_9"
                            android:textSize="12sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="@dimen/x15"
                            android:background="@color/common_gray_line" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/new_red_bag_layout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/mine_list_height"
                        android:background="@color/white"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_new_red_bag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/x15"
                            android:text="我的红包"
                            android:textColor="@color/color_3"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/new_red_bag_right_arrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:paddingLeft="@dimen/x5"
                            android:paddingRight="@dimen/x15"
                            android:src="@drawable/arrow_right_gray" />

                        <TextView
                            android:id="@+id/tv_new_red_bag_show"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/x30"
                            android:layout_toLeftOf="@id/new_red_bag_right_arrow"
                            android:layout_toRightOf="@id/tv_new_red_bag"
