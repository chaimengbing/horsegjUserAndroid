                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/x25"
                            android:text="货到付款"
                            android:textColor="@color/common_black_text"
                            android:textSize="16sp" />

                        <CheckBox
