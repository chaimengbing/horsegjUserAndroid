                                android:textColor="@color/color_3"
                                android:textSize="@dimen/x16" />

                            <TextView
                                android:id="@+id/address_mobile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/x15"
