<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.mgjandroid.ui.activity.ConfirmOrderActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_app_background"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/confirm_order_top_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar_height"
            android:background="@drawable/title_bar_bg"
            android:paddingLeft="@dimen/x10"
            android:paddingRight="@dimen/x10">

            <ImageView
                android:id="@+id/confirm_order_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_back" />

            <TextView
                android:id="@+id/confirm_order_login"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="@string/confirm_order_fast_login"
                android:textColor="@color/title_tv_festival"
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/confirm_order_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                android:ellipsize="end"
                android:gravity="left"
                android:singleLine="true"
                android:text="@string/confirm_order"
                android:textColor="@color/title_tv_festival"
                android:textSize="@dimen/title_bar_text_size" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/confir_order_act_shipping_fee_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#fad464"
                android:paddingBottom="@dimen/x6"
                android:paddingLeft="@dimen/x25"
                android:paddingRight="@dimen/x15"
                android:paddingTop="@dimen/x6"
                android:visibility="gone">

                <TextView
                    android:id="@+id/confir_order_act_shipping_fee_change"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    tools:text="Test：TestTestTestTestTestTest" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/confir_order_act_promotion_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="#fffeea"
                android:orientation="vertical"
                android:paddingTop="@dimen/x6"
                android:visibility="gone">

                <TextView
                    android:id="@+id/confir_order_act_promotion_change"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/x25"
                    android:paddingRight="@dimen/x15"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    tools:text="Test：TestTestTestTestTestTest" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="@dimen/x6"
                    android:background="@color/common_gray_line" />
            </LinearLayout>

