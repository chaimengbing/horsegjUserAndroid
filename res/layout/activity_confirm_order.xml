                            android:src="@drawable/arrow_right_gray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@id/fapiao_right_arrow"
                            android:text="@string/confirm_order_not_need_invoice"
                            android:textColor="@color/common_gray_text"
                            android:textSize="12sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_alignParentBottom="true"
                            android:background="@color/common_gray_line" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x6" />

                    <RelativeLayout
                        android:id="@+id/use_red_bag"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/mine_list_height"
                        android:background="@color/white"
                        android:visibility="gone">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@color/common_gray_line" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/x25"
                            android:text="@string/confirm_order_redbag"
                            android:textColor="@color/color_3"
                            android:textSize="16sp" />

                        <CheckBox
                            android:id="@+id/use_red_bag_checkbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
