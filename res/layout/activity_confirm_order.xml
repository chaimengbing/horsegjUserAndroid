                            android:gravity="right"
                            android:hint="无可用红包"
                            android:singleLine="true"
                            android:textColor="@color/color_6"
                            android:textColorHint="@color/color_9"
                            android:textSize="12sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="@dimen/x15"
                            android:background="@color/common_gray_line" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/confirm_order_caution"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/mine_list_height"
                        android:background="@color/white">

                        <TextView
                            android:id="@+id/tv_caution"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/x15"
                            android:text="@string/confirm_order_remark"
                            android:textColor="@color/color_3"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/other_right_arrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:paddingLeft="@dimen/x5"
                            android:paddingRight="@dimen/x15"
                            android:src="@drawable/arrow_right_gray" />

                        <TextView
                            android:id="@+id/tv_order_caution"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/x30"
                            android:layout_toLeftOf="@id/other_right_arrow"
                            android:layout_toRightOf="@id/tv_caution"
                            android:ellipsize="end"
                            android:gravity="right"
                            android:hint="@string/confirm_order_taste"
                            android:singleLine="true"
                            android:textColor="@color/color_6"
                            android:textColorHint="@color/color_9"
                            android:textSize="12sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="@dimen/x15"
                            android:background="@color/common_gray_line" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/mine_list_height"
                        android:background="@color/white"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/x15"
                            android:text="@string/confirm_order_invoice_head"
