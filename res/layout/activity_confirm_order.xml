                            android:textSize="13sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/shipping_fee_label"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/mine_list_height"
                        android:background="@color/white">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginLeft="@dimen/x15"
                            android:background="@color/common_gray_line" />

                        <TextView
                            android:id="@+id/peisong"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/x15"
                            android:text="@string/confirm_order_delivery_price"
                            android:textColor="@color/color_6"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/shipping_fee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:padding="@dimen/x15"
                            android:src="@drawable/arrow_right_gray"
                            android:text=""
                            android:textColor="@color/color_3"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/shipment_tip"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/x4"
                            android:layout_marginRight="@dimen/x20"
                            android:layout_toLeftOf="@id/shipping_fee"
                            android:layout_toRightOf="@id/peisong"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/color_9"
                            android:textSize="11sp" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/promotion_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/x15"
                        android:paddingLeft="@dimen/x15"
                        android:visibility="gone">

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignParentBottom="true"
                        android:background="@color/common_gray_line" />
                </LinearLayout>
            </ScrollView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/confir_order_act_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/commercial_bottom_height"
            android:background="#bb3d3d3d">

            <RelativeLayout
                android:id="@+id/commercial_act_bottom_car"
                android:layout_width="@dimen/x55"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/x4"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/commercial_act_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_car" />

                <TextView
                    android:id="@+id/cart_num"
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/bg_red_circle"
                    android:gravity="center"
                    android:maxLength="2"
                    android:text="1"
                    android:textColor="@android:color/white"
                    android:visibility="invisible" />
            </RelativeLayout>

            <TextView
                android:id="@+id/confirm_order_bottom_money_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x10"
                android:layout_toRightOf="@id/commercial_act_bottom_car"
                android:drawablePadding="@dimen/x4"
                android:gravity="bottom"
                android:text="待支付:¥"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/confirm_order_bottom_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/confirm_order_bottom_money_sign"
                android:drawablePadding="@dimen/x4"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/x2"
                android:text="0.0"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/confirm_order_bottom_money_free"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x2"
                android:layout_toRightOf="@id/confirm_order_bottom_money"
                android:drawablePadding="@dimen/x4"
                android:gravity="bottom"
                android:text=" | 优惠¥1.0"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/commercial_act_bottom_qisong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/x4"
                android:gravity="center_vertical"
                android:text="￥0起送"
                android:textColor="@color/gray_txt"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/confirm_order"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@color/pintuan_red"
                android:gravity="center"
                android:paddingLeft="@dimen/x20"
                android:paddingRight="@dimen/x20"
                android:text="@string/confirm_order"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relative_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66676767"
        android:visibility="gone">

    </RelativeLayout>
</RelativeLayout>
