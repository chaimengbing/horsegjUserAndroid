<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/car_hailing_detail_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/white">

        <ImageView
            android:id="@+id/photo_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x15"
            android:background="@drawable/icon_back_black" />

        <TextView
            android:id="@+id/photo_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:includeFontPadding="false"
            android:text="预约车辆"
            android:textColor="@color/color_3"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/car_hailing_detail_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:includeFontPadding="false"
            android:paddingRight="@dimen/x15"
            android:text="更多"
            android:textColor="@color/green_job"
            android:textSize="14sp"
            android:visibility="gone" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/car_hailing_detail_bar"
        android:background="@color/color_3" />

    <TextView
        android:id="@+id/pay_join_car_hailing"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x42"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/x10"
        android:background="@drawable/shap_corner_green_bg"
        android:gravity="center"
        android:text="去支付"
        android:textColor="@color/white"
        android:textSize="17sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/pay_join_car_hailing"
        android:layout_below="@id/car_hailing_detail_bar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/car_hailing_join_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                android:layout_marginTop="@dimen/x10"
                android:background="@drawable/shap_car_hailing_white_bg"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/join_car_hailing_leave_time"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/x50"
                    android:layout_gravity="center_horizontal"
                    android:drawableLeft="@drawable/icon_join_car_hailing_time"
                    android:drawablePadding="@dimen/x6"
                    android:gravity="center"
                    android:text="时间"
                    android:textColor="@color/color_3"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_e5" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/join_car_hailing_get_on_place"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x10"
                        android:layout_marginTop="@dimen/x21"
                        android:drawableLeft="@drawable/icon_get_on"
                        android:drawablePadding="@dimen/x7"
                        android:text="上车点"
                        android:textColor="@color/color_3"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/join_car_hailing_get_on_place_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/join_car_hailing_get_on_place"
                        android:layout_marginBottom="@dimen/x25"
                        android:layout_marginLeft="@dimen/x32"
                        android:layout_marginTop="@dimen/x8"
                        android:text="请选择上车地点"
                        android:textColor="@color/color_6"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/join_car_hailing_get_on_place_btn"
                        android:layout_width="@dimen/x60"
                        android:layout_height="@dimen/x25"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/x8"
                        android:layout_marginTop="@dimen/x15"
                        android:background="@drawable/shap_car_hailing_white_bg"
                        android:gravity="center"
                        android:text="上车地点"
                        android:textColor="@color/green_job"
                        android:textSize="12sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_e5" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/join_car_hailing_get_off_place"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x10"
                        android:layout_marginTop="@dimen/x21"
                        android:drawableLeft="@drawable/icon_get_off"
                        android:drawablePadding="@dimen/x7"
                        android:text="下车点"
                        android:textColor="@color/color_3"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/join_car_hailing_get_off_place_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/join_car_hailing_get_off_place"
                        android:layout_marginBottom="@dimen/x25"
                        android:layout_marginLeft="@dimen/x32"
                        android:layout_marginTop="@dimen/x8"
                        android:text="请选择下车地点"
                        android:textColor="@color/color_6"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/join_car_hailing_get_off_place_btn"
                        android:layout_width="@dimen/x60"
                        android:layout_height="@dimen/x25"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/x8"
                        android:layout_marginTop="@dimen/x15"
                        android:background="@drawable/shap_car_hailing_white_bg"
                        android:gravity="center"
                        android:text="下车地点"
                        android:textColor="@color/green_job"
                        android:textSize="12sp" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/join_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x55"
                android:layout_below="@id/car_hailing_join_content"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                android:layout_marginTop="@dimen/x10"
                android:background="@drawable/shap_car_hailing_white_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/x10">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/x10"
                    android:src="@drawable/icon_join_car_hailing" />

                <TextView
                    android:id="@+id/join_car_hailing_select_count"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/x35"
                    android:layout_marginRight="@dimen/x12"
                    android:layout_weight="1"
                    android:background="@drawable/shap_car_hailing_white_bg"
                    android:gravity="center_vertical"
                    android:hint="请选择乘车人数"
                    android:padding="@dimen/x4"
                    android:textColor="@color/color_3"
                    android:textColorHint="@color/color_c"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:textColor="#ff6600"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/join_car_hailing_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/x3"
                    android:text="20"
                    android:textColor="#ff6600"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/join_car_hailing_price_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/人起"
                    android:textColor="#ff6600"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/promotion_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/join_layout"
                android:layout_margin="@dimen/x10"
                android:background="@drawable/shap_car_hailing_white_bg"
                android:orientation="vertical"
                android:paddingBottom="@dimen/x15"
                android:paddingLeft="@dimen/x15"
                android:paddingRight="@dimen/x15"
                android:paddingTop="@dimen/x9"
                android:visibility="gone" />

            <FrameLayout
                android:id="@+id/tv_redbag_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/join_layout"
                android:layout_margin="@dimen/x10"
                android:background="@drawable/shap_car_hailing_white_bg"
                android:padding="@dimen/x15"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_redbag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/red_bag_icon"
                    android:drawablePadding="@dimen/x5"
                    android:text="您有3个可用红包"
                    android:textColor="@color/orange_text"
                    android:textSize="14sp" />

            </FrameLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>