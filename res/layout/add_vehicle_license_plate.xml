<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x68"
        android:layout_alignParentBottom="true"
        android:paddingTop="@dimen/x15"
        android:paddingBottom="@dimen/x10"
        android:background="@color/color_f5">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x43"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:background="@drawable/bg_login_orange_button"
            android:gravity="center"
            android:text="取消"
            android:layout_alignParentBottom="true"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </RelativeLayout>

    <GridView
        android:id="@+id/grid_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_rl"
        android:background="@color/color_f5"
        android:divider="@null"
        android:numColumns="7"
        android:horizontalSpacing="@dimen/x2"
        android:verticalSpacing="@dimen/x2"
        android:dividerHeight="0dip"></GridView>

</RelativeLayout>