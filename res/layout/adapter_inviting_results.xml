<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="horizontal">

    <com.project.mgjandroid.ui.view.CornerImageView
        android:id="@+id/iv_head_portrait"
        android:layout_width="@dimen/x31"
        android:layout_height="@dimen/x31"
        android:layout_marginLeft="@dimen/x25"
        android:scaleType="centerCrop"
        app:borderColor="@color/white"
        app:borderThickness="@dimen/x2"
        app:type="circle" />

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x31"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/iv_head_portrait"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x31"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x21"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="13sp" />

</RelativeLayout>