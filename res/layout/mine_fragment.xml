<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_user"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/mine_fragment_title_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x48">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/mine"
                android:textColor="@color/white"
                android:textSize="@dimen/title_bar_text_size" />

            <TextView
                android:id="@+id/mine_fragment_tv_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x20"
                android:padding="@dimen/x4"
                android:text="@string/login"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/mine_fragment_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x16"
                android:layout_toLeftOf="@id/mine_fragment_tv_login"
                android:background="@drawable/notice"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/mine_fragment_layout_to_user_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/x30"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x20"
            android:paddingTop="@dimen/x15">

            <com.project.mgjandroid.ui.view.RoundImageView
                android:id="@+id/mine_fragment_avatar"
                android:layout_width="@dimen/x50"
                android:layout_height="@dimen/x50"
                android:scaleType="centerCrop"
                android:src="@drawable/user_portrait" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x16"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mine_fragment_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="@string/please_login"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x7"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/mine_fragment_mobile_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/x4"
                        android:src="@drawable/mine_fragment_mobile_icon"
                        android:visibility="gone" />


                    <TextView
                        android:id="@+id/mine_fragment_mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                </LinearLayout>


            </LinearLayout>

            <ImageView
                android:id="@+id/mine_fragment_img_to_user_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/right_arrow_white" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x88">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x20"
                android:layout_alignParentBottom="true"
                android:background="@color/gray_white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_mine_white_radius"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/x25"
                android:paddingRight="@dimen/x25">

                <LinearLayout
                    android:id="@+id/mine_fragment_balance_operate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/mine_fragment_balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/title_bar_bg"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/mine_fragment_balance_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x2"
                            android:text="元"
                            android:textColor="@color/title_bar_bg"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x8"
                        android:text="@string/mine_balance"
                        android:textColor="@color/color_3"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/red_package"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/mine_fragment_red_bag_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/title_bar_bg"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/mine_fragment_red_bag_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x2"
                            android:text="个"
                            android:textColor="@color/title_bar_bg"
                            android:textSize="10sp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x8"
                        android:text="@string/mine_redbag"
                        android:textColor="@color/color_3"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mine_cards"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/mine_fragment_bank_card_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/title_bar_bg"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/mine_fragment_bank_card_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x2"
                            android:text="次"
                            android:textColor="@color/title_bar_bg"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x8"
                        android:text="@string/mine_rebate"
                        android:textColor="@color/color_3"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/mine_fragment_address_manager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/x16"
                    android:paddingLeft="@dimen/x20"
                    android:paddingRight="@dimen/x16"
                    android:paddingTop="@dimen/x16">

                    <ImageView
                        android:id="@+id/icon_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_1" />

                    <TextView
                        android:id="@+id/mine_fragment_img_address_manager"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x15"
                        android:layout_toRightOf="@id/icon_1"
                        android:gravity="center_vertical"
                        android:text="@string/address_manager"
                        android:textColor="@color/color_3"
                        android:textSize="@dimen/mine_list_text_size" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/right_arrow_gray" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/x15"
                    android:background="@color/mine_divide_grey" />

                <RelativeLayout
                    android:id="@+id/mine_fragment_my_publish"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/x16"
                    android:paddingLeft="@dimen/x20"
                    android:paddingRight="@dimen/x16"
                    android:paddingTop="@dimen/x16">

                    <ImageView
                        android:id="@+id/icon_publish"
                        android:layout_width="@dimen/x20"
                        android:layout_height="@dimen/x20"
                        android:layout_centerVertical="true"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_2" />

                    <TextView
                        android:id="@+id/mine_fragment_tv_publish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x15"
                        android:layout_toRightOf="@id/icon_publish"
                        android:gravity="center_vertical"
                        android:text="@string/my_publish"
                        android:textColor="@color/color_3"
                        android:textSize="@dimen/mine_list_text_size" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/right_arrow_gray" />
                </RelativeLayout>

                <View
                    android:id="@+id/mine_fragment_pintuan_line"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/x15"
                    android:background="@color/mine_divide_grey"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/mine_fragment_pintuan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/x16"
                    android:paddingLeft="@dimen/x20"
                    android:paddingRight="@dimen/x16"
                    android:paddingTop="@dimen/x16"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/icon_8"
                        android:layout_width="@dimen/x20"
                        android:layout_height="@dimen/x20"
                        android:layout_centerVertical="true"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_11" />

                    <TextView
                        android:id="@+id/mine_fragment_tv_pintuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x15"
                        android:layout_toRightOf="@id/icon_8"
                        android:gravity="center_vertical"
                        android:text="@string/my_pintuan"
                        android:textColor="@color/color_3"
                        android:textSize="@dimen/mine_list_text_size" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/right_arrow_gray" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/x15"
                    android:background="@color/mine_divide_grey" />

                <RelativeLayout
                    android:id="@+id/mine_fragment_my_save"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/x16"
                    android:paddingLeft="@dimen/x20"
                    android:paddingRight="@dimen/x16"
                    android:paddingTop="@dimen/x16">

                    <ImageView
                        android:id="@+id/icon_2"
                        android:layout_width="@dimen/x20"
                        android:layout_height="@dimen/x20"
                        android:layout_centerVertical="true"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_3" />

                    <TextView
                        android:id="@+id/mine_fragment_img_clear_cache"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x15"
                        android:layout_toRightOf="@id/icon_2"
                        android:gravity="center_vertical"
                        android:text="@string/my_save"
                        android:textColor="@color/color_3"
                        android:textSize="@dimen/mine_list_text_size" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/right_arrow_gray" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/x15"
                    android:background="@color/mine_divide_grey"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/mine_fragment_my_invite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/x16"
                    android:paddingLeft="@dimen/x20"
                    android:paddingRight="@dimen/x16"
                    android:paddingTop="@dimen/x16"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/icon_invite"
                        android:layout_width="@dimen/x20"
                        android:layout_height="@dimen/x20"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignTop="@+id/mine_fragment_text_invite"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_12" />

                    <TextView
                        android:id="@+id/mine_fragment_text_invite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x15"
                        android:layout_toRightOf="@id/icon_invite"
                        android:gravity="center_vertical"
                        android:text="邀请好友"
                        android:textColor="@color/color_3"
                        android:textSize="@dimen/mine_list_text_size" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/right_arrow_gray" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x10"
                android:layout_marginTop="@dimen/x10"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/mine_fragment_feed_back"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/x16"
                    android:paddingLeft="@dimen/x20"
                    android:paddingRight="@dimen/x16"
                    android:paddingTop="@dimen/x16"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/icon_6"
                        android:layout_width="@dimen/x20"
                        android:layout_height="@dimen/x20"
                        android:layout_centerVertical="true"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_4" />

                    <TextView
                        android:id="@+id/mine_fragment_img_feed_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x15"
                        android:layout_toRightOf="@id/icon_6"
                        android:gravity="center_vertical"
                        android:text="@string/feedback"
                        android:textColor="@color/color_3"
                        android:textSize="@dimen/mine_list_text_size" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/right_arrow_gray" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/x15"
                    android:background="@color/mine_divide_grey"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/mine_fragment_agent_join"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/x16"
                    android:paddingLeft="@dimen/x20"
                    android:paddingRight="@dimen/x16"
                    android:paddingTop="@dimen/x16">

                    <ImageView
                        android:id="@+id/icon_9"
                        android:layout_width="@dimen/x20"
                        android:layout_height="@dimen/x20"
                        android:layout_centerVertical="true"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_9" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x15"
                        android:layout_toRightOf="@id/icon_9"
                        android:gravity="center_vertical"
                        android:text="@string/agent_join"
                        android:textColor="@color/color_3"
                        android:textSize="@dimen/mine_list_text_size" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/right_arrow_gray" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/x15"
                    android:background="@color/mine_divide_grey"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/mine_fragment_merchant_join"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/x16"
                    android:paddingLeft="@dimen/x20"
                    android:paddingRight="@dimen/x16"
                    android:paddingTop="@dimen/x16"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/icon_10"
                        android:layout_width="@dimen/x20"
                        android:layout_height="@dimen/x20"
                        android:layout_centerVertical="true"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_10" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x15"
                        android:layout_toRightOf="@id/icon_10"
                        android:gravity="center_vertical"
                        android:text="@string/merchant_join"
                        android:textColor="@color/color_3"
                        android:textSize="@dimen/mine_list_text_size" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/right_arrow_gray" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/x15"
                    android:background="@color/mine_divide_grey" />

                <RelativeLayout
                    android:id="@+id/mine_fragment_serve_center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/x16"
                    android:paddingLeft="@dimen/x20"
                    android:paddingRight="@dimen/x16"
                    android:paddingTop="@dimen/x16">

                    <ImageView
                        android:id="@+id/icon_3"
                        android:layout_width="@dimen/x20"
                        android:layout_height="@dimen/x20"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_5" />

                    <TextView
                        android:id="@+id/mine_fragment_img_serve_center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x15"
                        android:layout_toRightOf="@id/icon_3"
                        android:gravity="center_vertical"
                        android:text="@string/serve_center"
                        android:textColor="@color/color_3"
                        android:textSize="@dimen/mine_list_text_size" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/right_arrow_gray" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/x15"
                    android:background="@color/mine_divide_grey"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/mine_fragment_tel_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/x16"
                    android:paddingLeft="@dimen/x20"
                    android:paddingRight="@dimen/x16"
                    android:paddingTop="@dimen/x16"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/icon_tel_num"
                        android:layout_width="@dimen/x20"
                        android:layout_height="@dimen/x20"
                        android:layout_centerVertical="true"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_7" />

                    <TextView
                        android:id="@+id/mine_fragment_img_tel_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x15"
                        android:layout_toRightOf="@id/icon_tel_num"
                        android:gravity="center_vertical"
                        android:text="@string/tel_num"
                        android:textColor="@color/color_3"
                        android:textSize="@dimen/mine_list_text_size" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/right_arrow_gray" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/x15"
                    android:background="@color/mine_divide_grey"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/mine_fragment_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/x16"
                    android:paddingLeft="@dimen/x20"
                    android:paddingRight="@dimen/x16"
                    android:paddingTop="@dimen/x16"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/icon_4"
                        android:layout_width="@dimen/x20"
                        android:layout_height="@dimen/x20"
                        android:layout_centerVertical="true"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_6" />

                    <TextView
                        android:id="@+id/mine_fragment_img_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x15"
                        android:layout_toRightOf="@id/icon_4"
                        android:gravity="center_vertical"
                        android:text="@string/score"
                        android:textColor="@color/color_3"
                        android:textSize="@dimen/mine_list_text_size" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/right_arrow_gray" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/x15"
                    android:background="@color/mine_divide_grey" />

                <RelativeLayout
                    android:id="@+id/mine_fragment_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/x16"
                    android:paddingLeft="@dimen/x20"
                    android:paddingRight="@dimen/x16"
                    android:paddingTop="@dimen/x16">

                    <ImageView
                        android:id="@+id/icon_7"
                        android:layout_width="@dimen/x20"
                        android:layout_height="@dimen/x20"
                        android:layout_centerVertical="true"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_8" />

                    <TextView
                        android:id="@+id/mine_fragment_tv_setting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x15"
                        android:layout_toRightOf="@id/icon_7"
                        android:gravity="center_vertical"
                        android:text="@string/set"
                        android:textColor="@color/color_3"
                        android:textSize="@dimen/mine_list_text_size" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/right_arrow_gray" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/x15"
                    android:background="@color/mine_divide_grey"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/mine_fragment_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/x16"
                    android:paddingLeft="@dimen/x20"
                    android:paddingRight="@dimen/x16"
                    android:paddingTop="@dimen/x16"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/icon_5"
                        android:layout_width="@dimen/x20"
                        android:layout_height="@dimen/x20"
                        android:layout_centerVertical="true"
                        android:src="@drawable/user_im_merchant" />

                    <TextView
                        android:id="@+id/mine_fragment_img_about"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x15"
                        android:layout_toRightOf="@id/icon_5"
                        android:gravity="center_vertical"
                        android:text="@string/about"
                        android:textColor="@color/common_gray_text"
                        android:textSize="@dimen/mine_list_text_size" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/right_arrow_gray" />
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>