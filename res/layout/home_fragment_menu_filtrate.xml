<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginTop="@dimen/x30"
            android:text="商家特色"
            android:textColor="@color/color_6"
            android:textSize="12sp" />

        <GridView
            android:id="@+id/grid_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x15"
            android:listSelector="@color/white"
            android:numColumns="3"
            android:paddingLeft="@dimen/x10"
            android:paddingRight="@dimen/x10"
            android:verticalSpacing="@dimen/x15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginTop="@dimen/x30"
            android:text="优惠活动"
            android:textColor="@color/color_6"
            android:textSize="12sp" />

        <GridView
            android:id="@+id/grid_view1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x15"
            android:listSelector="@color/white"
            android:numColumns="3"
            android:paddingLeft="@dimen/x10"
            android:paddingRight="@dimen/x10"
            android:verticalSpacing="@dimen/x15" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x22"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/home_fragment_menu_right_clear"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x44"
                android:layout_weight="1"
                android:background="@drawable/bg_gray"
                android:gravity="center"
                android:text="清空"
                android:textColor="#1f1f1f"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/home_fragment_menu_right_confirm"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x44"
                android:layout_weight="1"
                android:background="@drawable/bg_orange"
                android:gravity="center"
                android:text="确认"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray_bg" />

    </LinearLayout>
    <View
        android:id="@+id/home_fragment_menu_right_cover_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/popup_main_background" />
</LinearLayout>