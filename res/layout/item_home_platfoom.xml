<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x100"
    android:background="@drawable/item_home_platform_bg"
    android:layout_marginTop="@dimen/x10"
    android:orientation="horizontal">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/x15"
        android:layout_weight="1"
        android:paddingTop="@dimen/x10">


        <TextView
            android:id="@+id/name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/red_nologin"
            android:textSize="19sp"
            android:textStyle="bold"
            tools:text="天降红包" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_textview"
            android:layout_marginTop="@dimen/x2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/expiration_time_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x3"
                android:textColor="@color/color_9"
                android:textSize="11sp"
                tools:text="有效期至：2018-11-07" />

            <TextView
                android:id="@+id/restrict_time_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textColor="@color/color_9"
                android:textSize="11sp"
                tools:text="有效期至：2018-11-07" />
        </LinearLayout>

        <TextView
            android:id="@+id/type_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:lines="1"
            android:paddingBottom="@dimen/x10"
            android:textColor="@color/color_3"
            android:textSize="12sp"
            tools:text="限品类：跑腿  快递  外卖" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_amt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/x5"
        android:layout_weight="2">

        <TextView
            android:id="@+id/redbag_money_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/x5"
            android:textColor="@color/red_nologin"
            android:textSize="25sp"
            tools:text="￥18" />

        <TextView
            android:id="@+id/restrict_amt_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/color_3"
            android:textSize="12sp"
            tools:text="无门槛红包" />

        <TextView
            android:id="@+id/go_redbag_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/x10"
            android:background="@drawable/item_plat_gored_bg"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            tools:text="@string/go_look_redbag" />


    </RelativeLayout>


</LinearLayout>