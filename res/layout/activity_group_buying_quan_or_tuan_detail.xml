<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/common_top_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/white"
        android:paddingLeft="@dimen/x8"
        android:paddingRight="@dimen/x15">

        <ImageView
            android:id="@+id/common_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:contentDescription="@string/back"
            android:scaleType="centerInside"
            android:src="@drawable/iv_back_black" />

        <ImageView
            android:id="@+id/common_share"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/iv_share_black" />


    </RelativeLayout>

    <com.project.mgjandroid.ui.view.MyScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/common_top_bar"
        android:scrollbarThumbVertical="@drawable/xg_scrollbar"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x10"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/x15"
                    android:paddingRight="@dimen/x15">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv_merchant_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_merchant"
                            android:drawablePadding="@dimen/x5"
                            android:textColor="@color/color_6"
                            android:textSize="11sp" />

                        <RelativeLayout
                            android:id="@+id/coupon_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_merchant_name"
                            android:layout_marginTop="@dimen/x10">

                            <TextView
                                android:id="@+id/tv_coupon_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:singleLine="true"
                                android:textColor="@color/color_3"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                tools:text="川湘小炒" />

                            <ImageView
                                android:id="@+id/img_vip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/x15"
                                android:layout_toRightOf="@+id/tv_coupon_name"
                                android:src="@drawable/ic_vip"
                                android:visibility="gone"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/coupon_layout"
                            android:layout_marginTop="@dimen/x10"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="11sp"
                                android:textColor="@color/color_6"/>

                            <TextView
                                android:id="@+id/tv_sold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/color_9"
                                android:layout_alignParentRight="true"
                                android:textSize="11sp"
                                tools:text="已售" />

                        </RelativeLayout>

                    </RelativeLayout>

                    <com.project.mgjandroid.ui.view.CornerImageView
                        android:id="@+id/img"
                        android:layout_width="@dimen/x90"
                        android:layout_height="@dimen/x76"
                        android:layout_gravity="top"
                        android:scaleType="centerCrop"
                        android:src="@drawable/horsegj_default"
                        android:visibility="gone"
                        app:borderColor="#e5e5e5"
                        app:borderRadius="@dimen/x4"
                        app:borderThickness="1px"
                        app:type="round" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_picture_upload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x15"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scrollbars="none" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/goods_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x10"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/x20"
                    android:paddingRight="@dimen/x20"
                    android:orientation="vertical" />

            </LinearLayout>



            <com.project.mgjandroid.ui.view.scrollloopviewpager.widget.MyBanner
                android:id="@+id/my_banner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x182"
                android:visibility="gone">

                <com.project.mgjandroid.ui.view.scrollloopviewpager.widget.AutoScrollViewPager
                    android:id="@+id/picslooper"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <com.project.mgjandroid.ui.view.scrollloopviewpager.widget.CircleIndicator
                    android:id="@+id/pageIndexor"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_alignParentBottom="true" />

                <TextView
                    android:id="@+id/tv_photo_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/x15"
                    android:layout_marginRight="@dimen/x15"
                    android:background="@drawable/bg_img_count"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    tools:text="1/9" />
            </com.project.mgjandroid.ui.view.scrollloopviewpager.widget.MyBanner>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x65"
                android:background="@color/white"
                android:paddingTop="@dimen/x5"
                android:visibility="gone">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="@dimen/x15"
                        android:text="￥"
                        android:textColor="#f95046"
                        android:textSize="@dimen/x14" />

                    <TextView
                        android:id="@+id/tv_price_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:textColor="#f95046"
                        android:textSize="@dimen/x30"
                        tools:text="88" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="@dimen/x10"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_vip"
                            android:layout_width="@dimen/x60"
                            android:layout_height="@dimen/x13"
                            android:background="#eec214"
                            android:gravity="center"
                            android:text="新用户专享"
                            android:textColor="#181818"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/tv_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/color_9"
                            android:textSize="@dimen/x14"
                            tools:text="￥88 代100元" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_buy"
                    android:layout_width="@dimen/x75"
                    android:layout_height="@dimen/x35"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="@dimen/x15"
                    android:background="@drawable/bg_login_orange_button"
                    android:gravity="center"
                    android:text="立即购买"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_gravity="bottom"
                    android:background="@color/color_e5" />

            </FrameLayout>

            <LinearLayout
                android:id="@+id/option_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x45"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/x15"
                android:paddingRight="@dimen/x15"
                android:visibility="gone">

                <TextView
                    android:id="@+id/text_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/group_buying_select"
                    android:drawablePadding="@dimen/x8"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_9"
                    android:textSize="12sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/text_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/group_buying_select"
                    android:drawablePadding="@dimen/x8"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_9"
                    android:textSize="12sp" />

                <View
                    android:id="@+id/space_view"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/text_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/group_buying_select"
                    android:drawablePadding="@dimen/x8"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_9"
                    android:textSize="12sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/text_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/group_buying_select"
                    android:drawablePadding="@dimen/x8"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_9"
                    android:textSize="12sp" />

            </LinearLayout>

            <View
                android:id="@+id/option_line"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_e5" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="@dimen/x10"
                android:background="@color/color_e5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/tv_buy_take_away"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/x40"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/x15"
                        android:text="商家信息"
                        android:textColor="@color/color_3"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/x15"
                        android:drawablePadding="@dimen/x3"
                        android:drawableRight="@drawable/arrow_right_orange"
                        android:gravity="center"
                        android:text="更多优惠"
                        android:textColor="@color/title_bar_bg"
                        android:textSize="12sp"
                        android:visibility="visible" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/x15"
                    android:layout_marginRight="@dimen/x15"
                    android:background="@color/color_e5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/address_layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x26"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/x8"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/color_3"
                            android:textSize="15sp"
                            tools:text="王府井全聚德烤鸭" />

                        <TextView
                            android:id="@+id/tv_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/x8"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/color_6"
                            android:textSize="12sp"
                            tools:text="中央大街王府井大街全聚德烤鸭东路100号" />

                        <TextView
                            android:id="@+id/tv_distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/x6"
                            android:layout_marginTop="@dimen/x8"
                            android:drawableLeft="@drawable/group_buying_icon_location"
                            android:drawablePadding="@dimen/x10"
                            android:gravity="bottom"
                            android:textColor="@color/color_6"
                            android:textSize="12sp"
                            tools:text="110m" />

                    </LinearLayout>

                    <View
                        android:layout_width="1px"
                        android:layout_height="@dimen/x40"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/x24"
                        android:background="@color/color_e5" />

                    <ImageView
                        android:id="@+id/iv_call"
                        android:layout_width="@dimen/x65"
                        android:layout_height="@dimen/x60"
                        android:layout_gravity="center_vertical"
                        android:scaleType="centerInside"
                        android:src="@drawable/group_buying_call_icon" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_e5" />

            <LinearLayout
                android:id="@+id/recommend_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_e5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/x40"
                    android:layout_marginLeft="@dimen/x15"
                    android:gravity="center_vertical"
                    android:text="推荐"
                    android:textColor="@color/color_3"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/x15"
                    android:layout_marginRight="@dimen/x15"
                    android:background="@color/color_e5" />

                <TextView
                    android:id="@+id/recommend_dishes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x15"
                    android:layout_marginRight="@dimen/x15"
                    android:paddingTop="@dimen/x10"
                    android:textColor="@color/color_6"
                    android:textSize="12sp"
                    tools:text="凉拌土豆丝\u3000凉拌黄瓜\u3000豆角炖土豆\u3000红烧鸡翅\u3000羊肉泡馍\u3000西红柿鸡蛋\u3000新疆大盘鸡" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="@dimen/x10"
                    android:background="@color/color_e5" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:background="@color/white"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_e5" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x45"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/x15"
                    android:text="购买须知"
                    android:textColor="@color/color_3"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/x15"
                    android:layout_marginRight="@dimen/x15"
                    android:background="@color/color_e5" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x12"
                    android:paddingLeft="@dimen/x15"
                    android:paddingRight="@dimen/x15"
                    android:text="使用范围："
                    android:textColor="@color/color_3"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x5"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/x15"
                    android:paddingRight="@dimen/x15">

                    <include layout="@layout/group_buying_use_rule_point" />

                    <TextView
                        android:id="@+id/tv_use_range"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="@dimen/x5"
                        android:textColor="@color/color_6"
                        android:textSize="14sp"
                        tools:text="全场通用" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_rule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x6"
                    android:paddingLeft="@dimen/x15"
                    android:paddingRight="@dimen/x15"
                    android:text="规则提醒："
                    android:textColor="@color/color_3"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/ll_rule_remind"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x5"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/x15"
                    android:paddingRight="@dimen/x15"
                    android:visibility="gone">

                    <include layout="@layout/group_buying_use_rule_point" />

                    <TextView
                        android:id="@+id/tv_rule_remind"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="@dimen/x5"
                        android:textColor="@color/color_6"
                        android:textSize="14sp"
                        tools:text="11:00-22:00" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x6"
                    android:paddingLeft="@dimen/x15"
                    android:paddingRight="@dimen/x15"
                    android:text="有效期："
                    android:textColor="@color/color_3"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/ll_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x5"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/x15"
                    android:paddingRight="@dimen/x15">

                    <include layout="@layout/group_buying_use_rule_point" />

                    <TextView
                        android:id="@+id/tv_limit_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="@dimen/x5"
                        android:textColor="@color/color_6"
                        android:textSize="14sp"
                        tools:text="11:00-22:00" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_use_mTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x6"
                    android:paddingLeft="@dimen/x15"
                    android:paddingRight="@dimen/x15"
                    android:text="使用时间："
                    android:textColor="@color/color_3"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/ll_use_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x5"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/x15"
                    android:paddingRight="@dimen/x15"
                    android:visibility="gone">

                    <include layout="@layout/group_buying_use_rule_point" />

                    <TextView
                        android:id="@+id/tv_use_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="@dimen/x5"
                        android:textColor="@color/color_6"
                        android:textSize="14sp"
                        tools:text="11:00-22:00" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x6"
                    android:paddingLeft="@dimen/x15"
                    android:paddingRight="@dimen/x15"
                    android:text="使用规则："
                    android:textColor="@color/color_3"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/use_rule_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/x15"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/x15"
                    android:paddingRight="@dimen/x15" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/evaluation_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_e5" />

                <TextView
                    android:id="@+id/tv_evaluate"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x45"
                    android:drawableRight="@drawable/right_arrow_gray"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/x15"
                    android:paddingRight="@dimen/x15"
                    android:textColor="@color/color_3"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="评价（8）" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_e5" />

                <com.project.mgjandroid.ui.view.NoScrollListView
                    android:id="@+id/evaluation_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/color_e5"
                    android:dividerHeight="1px" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_e5" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/discount_layout"
                android:layout_width="match_parent"
