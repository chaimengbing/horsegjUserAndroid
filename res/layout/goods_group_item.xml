<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/item_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/goods_group_item_tv_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x60"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/x10">

            <ImageView
                android:id="@+id/goods_group_item_icon"
                android:layout_width="@dimen/x9"
                android:layout_height="@dimen/x11"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/x4"
                android:scaleType="fitXY"
                android:visibility="gone"
                android:src="@drawable/icon_hot_sale" />

            <TextView
                android:id="@+id/goods_group_item_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:paddingRight="@dimen/x10"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/color_3"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/menu_num"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x14"
            android:minWidth="@dimen/x14"
            android:text="1"
            android:textSize="10sp"
            android:paddingLeft="@dimen/x2"
            android:paddingRight="@dimen/x2"
            android:singleLine="true"
            android:ellipsize="end"
            android:background="@drawable/shap_corner_group_red_bg"
            android:textColor="@android:color/white"
            android:gravity="top|center_horizontal"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/x4"
            android:layout_marginRight="@dimen/x4"
            android:visibility="invisible" />

        <View
            android:id="@+id/goods_group_item_left_line"
            android:layout_width="@dimen/x3"
            android:layout_height="@dimen/x32"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@color/title_bar_bg"
            android:visibility="invisible" />

        <View
            android:id="@+id/goods_group_item_bottom_line"
            android:layout_width="match_parent"
            android:layout_below="@id/goods_group_item_tv_layout"
            android:layout_height="2px"
            android:layerType="software"
            android:background="@drawable/shape_dashed_c2" />
    </RelativeLayout>

</RelativeLayout>