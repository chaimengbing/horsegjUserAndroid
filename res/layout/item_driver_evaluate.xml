<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <com.project.mgjandroid.ui.view.RoundImageView
        android:id="@+id/driver_evaluate_user_header"
        android:layout_width="@dimen/x35"
        android:layout_height="@dimen/x35"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginTop="@dimen/x10"
        android:src="@drawable/user_avatar"
        app:border_outside_color="#88ffffff"
        app:border_thickness="@dimen/x5" />

    <TextView
        android:id="@+id/driver_evaluate_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/driver_evaluate_user_header"
        android:text="乘客姓名"
        android:textColor="@color/color_3"
        android:layout_marginTop="@dimen/x15"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/driver_evaluate_given_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/driver_evaluate_user_header"
        android:layout_below="@id/driver_evaluate_username"
        android:text="评价内容"
        android:textColor="@color/color_6"
        android:layout_marginTop="@dimen/x13"
        android:textSize="13sp" />

    <RatingBar
        android:id="@+id/driver_evaluate_given_count"
        style="@style/RatingBar.GroupEvaluate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x17"
        android:layout_marginLeft="@dimen/x5"
        android:layout_toRightOf="@id/driver_evaluate_username"
        android:isIndicator="true"
        android:numStars="5"
        android:stepSize="0.1" />

    <TextView
        android:id="@+id/car_hailing_detail_order_driver_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x18"
        android:layout_marginRight="@dimen/x10"
        android:gravity="right"
        android:text="评论日期"
        android:ellipsize="end"
        android:textSize="12sp"
        android:textColor="@color/color_9"
        android:layout_toRightOf="@id/driver_evaluate_given_count" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/driver_evaluate_given_content"
        android:layout_marginTop="@dimen/x10"
        android:background="@color/color_e5" />

</RelativeLayout>