<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:paddingTop="7dp"
        android:paddingBottom="8dp"
        android:background="@drawable/group_buying_quan_item_bg">

        <RelativeLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="17dp"
            android:paddingBottom="@dimen/x13">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_3"
                android:textSize="15sp"
                tools:text="北京大饭店优惠券"
                android:layout_marginRight="@dimen/x15"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_9"
                android:textSize="12sp"
                tools:text="有效期至：2017.05.20"
                android:layout_alignParentBottom="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right_arrow_gray"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

        <com.project.mgjandroid.ui.view.CornerImageView
            android:id="@+id/pic_code"
            android:layout_width="@dimen/x140"
            android:layout_height="@dimen/x140"
            android:layout_marginTop="@dimen/x35"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerInside"
            app:borderRadius="@dimen/x2"
            app:borderThickness="1px"
            app:borderColor="#e1e1e1"
            app:type="round" />

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="@dimen/x260"
            android:layout_height="@dimen/x40"
            android:textSize="15sp"
            android:textColor="@color/color_6"
            tools:text="券码：3655 2837 9927 7389"
            android:background="@drawable/shape_gray_bg_f3"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/x20"
            android:layout_marginBottom="@dimen/x35" />

        <TextView
            android:id="@+id/text_taocan"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x25"
            android:background="@drawable/shape_yellow_bg"
            android:text="套餐"
            android:textColor="@color/color_3"
            android:textSize="13sp"
            android:layout_marginLeft="@dimen/x8"
            android:layout_marginRight="@dimen/x8"
            android:gravity="center"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/dish_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:visibility="gone" />

    </LinearLayout>

</FrameLayout>