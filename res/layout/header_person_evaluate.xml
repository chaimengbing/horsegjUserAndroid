<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="@dimen/x15">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总体评价"
                android:layout_gravity="center"
                android:textColor="@color/color_3"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x11"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/user_evaluate_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_3"
                    android:textSize="16sp"
                    android:text="5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_9"
                    android:textSize="11sp"
                    android:paddingTop="@dimen/x3"
                    android:layout_marginLeft="@dimen/x7"
                    android:text="分" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品评价"
                android:layout_gravity="center"
                android:textColor="@color/color_3"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x11"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/user_evaluate_goods"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_3"
                    android:textSize="16sp"
                    android:text="5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_9"
                    android:textSize="11sp"
                    android:paddingTop="@dimen/x3"
                    android:layout_marginLeft="@dimen/x7"
                    android:text="分" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务评价"
                android:layout_gravity="center"
                android:textColor="@color/color_3"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x11"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/user_evaluate_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_3"
                    android:textSize="16sp"
                    android:text="5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_9"
                    android:textSize="11sp"
                    android:paddingTop="@dimen/x3"
                    android:layout_marginLeft="@dimen/x7"
                    android:text="分" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/x1"
        android:paddingLeft="@dimen/x15"
        android:paddingTop="@dimen/x15"
        android:paddingRight="@dimen/x15"
        android:paddingBottom="@dimen/x15">

        <TextView
            android:id="@+id/user_evaluate_all"
            android:layout_width="0dp"
            android:layout_height="@dimen/x27"
            android:layout_weight="1"
            android:text="全部"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_marginRight="@dimen/x15"
            android:background="@drawable/shap_org_range_bg"
            android:textColor="#ff9900" />

        <TextView
            android:id="@+id/user_evaluate_has_image"
            android:layout_width="0dp"
            android:layout_height="@dimen/x27"
            android:layout_weight="1"
            android:text="晒图"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/x15"
            android:background="@drawable/shap_gray_white_bg"
            android:textColor="@color/gray_txt" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x5" />

</LinearLayout>