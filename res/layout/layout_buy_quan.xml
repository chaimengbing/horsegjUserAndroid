<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/outside"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#48000000" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x60"
        android:paddingLeft="@dimen/x15"
        android:paddingRight="@dimen/x15"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_amt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/color_3"
            android:text="￥100"
            android:layout_gravity="center_vertical" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical|right">

            <ImageView
                android:id="@+id/iv_minus"
                android:layout_width="@dimen/x33"
                android:layout_height="@dimen/x33"
                android:background="@drawable/shap_gray_bg_e8"
                android:src="@drawable/min_group_goods_gray"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="@dimen/x65"
                android:layout_height="@dimen/x33"
                android:background="@drawable/shap_gray_bg_e8"
                android:text="1"
                android:layout_marginLeft="@dimen/x2"
                android:gravity="center"
                android:textColor="@color/color_3"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_add"
                android:layout_width="@dimen/x33"
                android:layout_height="@dimen/x33"
                android:background="@drawable/shap_gray_bg_e8"
                android:src="@drawable/add_group_goods"
                android:scaleType="centerInside"
                android:layout_marginLeft="@dimen/x2" />

        </LinearLayout>

    </FrameLayout>

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x42"
        android:text="提交订单"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:gravity="center"
        android:background="@color/title_bar_bg" />

</LinearLayout>