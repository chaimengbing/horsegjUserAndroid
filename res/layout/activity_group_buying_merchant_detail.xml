<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg">

    <com.project.mgjandroid.ui.view.MyScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarThumbVertical="@drawable/xg_scrollbar"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.project.mgjandroid.ui.view.scrollloopviewpager.widget.MyBanner
                android:id="@+id/my_banner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x220">

                <com.project.mgjandroid.ui.view.scrollloopviewpager.widget.AutoScrollViewPager
                    android:id="@+id/picslooper"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <com.project.mgjandroid.ui.view.scrollloopviewpager.widget.CircleIndicator
                    android:id="@+id/pageIndexor"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_alignParentBottom="true" />

                <TextView
                    android:id="@+id/tv_photo_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/x15"
                    android:layout_marginRight="@dimen/x15"
                    android:background="@drawable/bg_img_count"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    tools:text="1/9" />
            </com.project.mgjandroid.ui.view.scrollloopviewpager.widget.MyBanner>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x75"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/x15"
                android:paddingRight="@dimen/x15">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_merchant_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:singleLine="true"
                        android:textColor="@color/color_3"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="川湘小炒" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_merchant_name"
                        android:layout_marginTop="@dimen/x4"
                        android:gravity="center_vertical">

                        <RatingBar
                            android:id="@+id/rb_score"
                            style="@style/RatingBar.ShopGoods"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:isIndicator="true"
                            android:numStars="5"
                            android:stepSize="0.1" />

                        <TextView
                            android:id="@+id/tv_average_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x8"
                            android:includeFontPadding="false"
                            android:textColor="@color/color_6"
                            android:textSize="11sp"
                            tools:text="人均￥36" />
                    </LinearLayout>

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_buy_take_away"
                    android:layout_width="@dimen/x75"
                    android:layout_height="@dimen/x35"
                    android:layout_marginLeft="@dimen/x15"
                    android:background="@drawable/bg_login_orange_button"
                    android:gravity="center"
                    android:text="订份外卖"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:visibility="gone" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_e5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x15"
                    android:layout_marginTop="@dimen/x12"
                    android:paddingRight="@dimen/x9"
                    android:src="@drawable/group_buying_icon_location" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x13"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="@dimen/x8"
                        android:maxLines="2"
                        android:textColor="@color/color_3"
                        android:textSize="15sp"
                        tools:text="大钟寺中坤广场盈都大厦C座" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/x8"
                        android:layout_marginTop="@dimen/x8"
                        android:textColor="@color/color_6"
                        android:textSize="12sp"
                        tools:text="营业时间: 11:00-14:00  17:00-21:00" />

                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="@dimen/x40"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x24"
                    android:background="@color/color_e5" />

                <ImageView
                    android:id="@+id/iv_call"
                    android:layout_width="@dimen/x65"
                    android:layout_height="@dimen/x60"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerInside"
                    android:src="@drawable/group_buying_call_icon" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="@dimen/x10"
                android:background="@color/color_e5" />

            <LinearLayout
                android:id="@+id/quan_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_e5" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/group_buying_quan"
                    android:drawablePadding="@dimen/x7"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/x15"
                    android:paddingTop="@dimen/x14"
                    android:text="代金券"
                    android:textColor="@color/color_3"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tuan_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_e5" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/group_buying_tuan"
                    android:drawablePadding="@dimen/x7"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/x15"
                    android:paddingTop="@dimen/x10"
                    android:text="团购套餐"
                    android:textColor="@color/color_3"
                    android:textSize="15sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_e5" />

            <LinearLayout
                android:id="@+id/recommend_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginBottom="@dimen/x10"
                    android:background="@color/color_e5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/x2"
                    android:layout_marginLeft="@dimen/x15"
                    android:text="商家推荐"
                    android:textColor="@color/color_3"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/recommend_dishes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x15"
                    android:layout_marginRight="@dimen/x15"
                    android:paddingTop="@dimen/x10"
                    android:textColor="@color/color_6"
                    android:textSize="12sp"
                    tools:text="凉拌土豆丝\u3000凉拌黄瓜\u3000豆角炖土豆\u3000红烧鸡翅\u3000羊肉泡馍\u3000西红柿鸡蛋\u3000新疆大盘鸡" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="@dimen/x10"
                    android:background="@color/color_e5" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/evaluation_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_e5" />

                <TextView
                    android:id="@+id/tv_evaluate"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x45"
                    android:drawableRight="@drawable/right_arrow_gray"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/x15"
                    android:paddingRight="@dimen/x15"
                    android:textColor="@color/color_3"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="评价（8）" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_e5" />

                <com.project.mgjandroid.ui.view.NoScrollListView
                    android:id="@+id/evaluation_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/color_e5"
                    android:dividerHeight="1px" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_e5" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/service_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_e5" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x45"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/x15"
                    android:paddingRight="@dimen/x15"
                    android:text="商家服务"
                    android:textColor="@color/color_3"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/x15"
                    android:layout_marginRight="@dimen/x15"
                    android:background="@color/color_e5" />

                <com.project.mgjandroid.ui.view.NoScrollGridView
                    android:id="@+id/grid_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x15"
                    android:layout_marginRight="@dimen/x15"
                    android:clickable="false"
                    android:listSelector="@android:color/transparent"
                    android:numColumns="4" />

                <View
                    android:id="@+id/dash_line"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginLeft="@dimen/x15"
                    android:layout_marginRight="@dimen/x15"
                    android:layout_marginTop="@dimen/x8"
                    android:background="@drawable/shape_dashed"
                    android:layerType="software" />

                <TextView
                    android:id="@+id/tv_service"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x5"
                    android:layout_marginRight="@dimen/x5"
                    tools:text="本店提供优质服务" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_e5" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_qualification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_e5" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x45"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/x15"
                    android:paddingRight="@dimen/x15"
                    android:text="商家资质"
                    android:textColor="@color/color_3"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/x15"
                    android:layout_marginRight="@dimen/x15"
                    android:background="@color/color_e5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x15"
                    android:layout_marginRight="@dimen/x15"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/x8"
                    android:paddingTop="@dimen/x16">

                    <ImageView
                        android:id="@+id/img_left"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/x95"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_party"
                        android:padding="2px"
                        android:scaleType="fitXY" />

                    <ImageView
                        android:id="@+id/img_right"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/x95"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_party"
                        android:padding="2px"
                        android:scaleType="fitXY" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/more_merchant_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="@dimen/x50"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_e5" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x45"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/x15"
                    android:paddingRight="@dimen/x15"
                    android:text="更多商家"
                    android:textColor="@color/color_3"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/x15"
                    android:layout_marginRight="@dimen/x15"
                    android:background="@color/color_e5" />

                <com.project.mgjandroid.ui.view.NoScrollListView
                    android:id="@+id/merchant_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/color_e5"
                    android:dividerHeight="1px" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_e5" />

            </LinearLayout>

        </LinearLayout>


    </com.project.mgjandroid.ui.view.MyScrollView>

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginTop="@dimen/x9"
        android:src="@drawable/group_buying_back" />

    <ImageView
        android:id="@+id/iv_share"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/x55"
        android:layout_marginTop="@dimen/x9"
        android:src="@drawable/group_buying_share" />

    <ImageView
        android:id="@+id/iv_collect"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/x15"
        android:layout_marginTop="@dimen/x9"
        android:src="@drawable/group_buying_collect" />

    <RelativeLayout
        android:id="@+id/common_top_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@drawable/title_bar_bg"
        android:paddingLeft="@dimen/x15"
        android:paddingRight="@dimen/x15"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/common_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:contentDescription="@string/back"
            android:scaleType="centerInside"
            android:src="@drawable/icon_back" />

        <TextView
            android:id="@+id/common_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:ellipsize="end"
            android:gravity="start"
            android:maxLength="13"
            android:singleLine="true"
            android:textColor="@color/title_tv_festival"
            android:textSize="@dimen/title_bar_text_size" />

        <ImageView
            android:id="@+id/common_share"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x40"
            android:scaleType="centerInside"
            android:src="@drawable/gc_shared_icon" />

        <ImageView
            android:id="@+id/common_collect"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/gc_collection_icon" />

    </RelativeLayout>

</FrameLayout>