<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/actionbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/job_recruitment_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_my_publish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x31"
            android:layout_marginTop="@dimen/x16"
            android:alpha="0.85"
            android:background="@drawable/bg_my_publish_round"
            android:gravity="center"
            android:text="我的\n发布"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/x68"
            android:orientation="vertical"
            android:paddingLeft="@dimen/x15"
            android:paddingRight="@dimen/x15">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/layout_job_recruitment_1"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/x65"
                    android:layout_weight="1"
                    android:alpha="0.85"
                    android:background="@drawable/bg_job_recruitment_1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x19"
                        android:src="@drawable/job_recruitment_1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/x16"
                        android:layout_marginRight="@dimen/x25"
                        android:text="找工作"
                        android:textColor="#ffffff"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_job_recruitment_2"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/x65"
                    android:layout_marginLeft="@dimen/x25"
                    android:layout_weight="1"
                    android:alpha="0.85"
                    android:background="@drawable/bg_job_recruitment_2"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x19"
                        android:src="@drawable/job_recruitment_2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/x16"
                        android:layout_marginRight="@dimen/x25"
                        android:text="找人才"
                        android:textColor="#ffffff"
                        android:textSize="18sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x34"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/layout_job_recruitment_3"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/x65"
                    android:layout_weight="1"
                    android:alpha="0.85"
                    android:background="@drawable/bg_job_recruitment_3"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x19"
                        android:src="@drawable/job_recruitment_3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/x16"
                        android:layout_marginRight="@dimen/x25"
                        android:text="发简历"
                        android:textColor="#ffffff"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_job_recruitment_4"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/x65"
                    android:layout_marginLeft="@dimen/x25"
                    android:layout_weight="1"
                    android:alpha="0.85"
                    android:background="@drawable/bg_job_recruitment_4"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x19"
                        android:src="@drawable/job_recruitment_4" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/x16"
                        android:layout_marginRight="@dimen/x25"
                        android:text="发招聘"
                        android:textColor="#ffffff"
                        android:textSize="18sp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>