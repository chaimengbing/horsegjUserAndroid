<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bao="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tv_submit"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/photo_tool_bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_bar_height"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/common_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x15"
                    android:background="@drawable/icon_back_black" />

                <TextView
                    android:id="@+id/common_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:includeFontPadding="false"
                    android:text="评价"
                    android:textColor="@color/color_3"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_del"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/x30"
                    android:text="删除"
                    android:textColor="@color/color_6"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="#e2e2e2" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x59"
                android:orientation="horizontal">

                <com.project.mgjandroid.ui.view.CornerImageView
                    android:id="@+id/user_avatar"
                    android:layout_width="@dimen/x28"
                    android:layout_height="@dimen/x28"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x15"
                    android:scaleType="centerCrop"
                    android:src="@drawable/user_avatar"
                    app:type="circle" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_toRightOf="@+id/user_avatar"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1263"
                        android:textColor="@color/color_3"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x5"
                        android:text="1263"
                        android:textColor="@color/color_6"
                        android:textSize="12sp" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x15"
                    android:text="评价对骑手匿名"
                    android:textColor="@color/color_9"
                    android:textSize="12sp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/x20"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/layout_bad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_bad"
                            android:layout_width="@dimen/x35"
                            android:layout_height="@dimen/x35"
                            android:src="@drawable/bg_select_mood" />

                        <TextView
                            android:id="@+id/tv_bad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/x10"
                            android:text="非常差"
                            android:textColor="@color/color_6"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_ordinary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x39"
                        android:layout_marginRight="@dimen/x39"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_ordinary"
                            android:layout_width="@dimen/x35"
                            android:layout_height="@dimen/x35"
                            android:src="@drawable/bg_select_mood1" />

                        <TextView
                            android:id="@+id/tv_ordinary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/x10"
                            android:text="一般"
                            android:textColor="@color/color_6"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_good"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_good"
                            android:layout_width="@dimen/x35"
                            android:layout_height="@dimen/x35"
                            android:src="@drawable/bg_select_mood2" />

                        <TextView
                            android:id="@+id/tv_good"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/x10"
                            android:text="超赞"
                            android:textColor="@color/color_6"
                            android:textSize="13sp" />
                    </LinearLayout>

                </LinearLayout>

                <com.project.mgjandroid.ui.view.NoScrollGridView
                    android:id="@+id/grid_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x30"
                    android:listSelector="@color/white"
                    android:numColumns="3"
                    android:paddingBottom="@dimen/x20"
                    android:paddingLeft="@dimen/x40"
                    android:paddingRight="@dimen/x40"
                    android:scrollbars="none"
                    android:verticalSpacing="@dimen/x10"
                    android:horizontalSpacing="@dimen/x10"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x59"
                android:orientation="horizontal">

                <com.project.mgjandroid.ui.view.CornerImageView
                    android:id="@+id/user_avatar1"
                    android:layout_width="@dimen/x28"
                    android:layout_height="@dimen/x28"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x15"
                    android:scaleType="centerCrop"
                    android:src="@drawable/user_avatar"
                    app:type="circle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_toRightOf="@+id/user_avatar1"
                    android:text="1263"
                    android:textColor="@color/color_3"
                    android:textSize="15sp" />

                <CheckBox
                    android:id="@+id/tv_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x15"
                    android:button="@null"
                    android:drawableLeft="@drawable/refund_select"
                    android:drawablePadding="@dimen/x10"
                    android:gravity="center"
                    android:text="匿名评价"
                    android:textColor="@color/color_6"
                    android:textSize="12sp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <com.project.mgjandroid.ui.view.RatingBarView
                    android:id="@+id/all_rat_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/x20"
                    android:layout_toRightOf="@id/all_evaluate_text"
                    bao:starCount="5"
                    bao:starEmpty="@drawable/evaluate_default_1"
                    bao:starFill="@drawable/evaluate_normal_1"
                    bao:starImageSize="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/x10"
                    android:text=""
                    android:textColor="@color/bg_festival"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x30"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/x15"
                        android:paddingRight="@dimen/x15">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <com.project.mgjandroid.ui.view.RatingBarView
                            android:id="@+id/all_rat_score1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="@dimen/x15"
                            android:layout_toRightOf="@id/all_evaluate_text"
                            bao:starCount="5"
                            bao:starEmpty="@drawable/evaluate_default_1"
                            bao:starFill="@drawable/evaluate_normal_1"
                            bao:starImageSize="18dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x10"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/x15"
                        android:paddingRight="@dimen/x15">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <com.project.mgjandroid.ui.view.RatingBarView
                            android:id="@+id/all_rat_score2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="@dimen/x15"
                            android:layout_toRightOf="@id/all_evaluate_text"
                            bao:starCount="5"
                            bao:starEmpty="@drawable/evaluate_default_1"
                            bao:starFill="@drawable/evaluate_normal_1"
                            bao:starImageSize="18dp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/driver_text_view_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x30"
                    android:layout_marginLeft="@dimen/x15"
                    android:layout_marginRight="@dimen/x15"
                    android:background="@drawable/shap_evaluate_without_stroke"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/driver_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shap_evaluate_without_stroke"
                        android:gravity="top"
                        android:hint="@string/item_evaluate_list_driver_comment"
                        android:maxLength="120"
                        android:paddingBottom="@dimen/x4"
                        android:paddingLeft="@dimen/x8"
                        android:paddingRight="@dimen/x8"
                        android:paddingTop="@dimen/x8"
                        android:singleLine="true"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/driver_evaluate_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingBottom="@dimen/x4"
                        android:paddingRight="@dimen/x8"
                        android:text="0/120"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_picture_upload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x15"
                    android:layout_marginLeft="@dimen/x15"
                    android:layout_marginRight="@dimen/x15"
                    android:layout_marginBottom="@dimen/x20"
                    android:orientation="vertical">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scrollbars="none" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/x10"
                android:layout_marginBottom="@dimen/x10"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/color_3"
                    android:layout_gravity="center_horizontal"
                    android:text="有没有不错或者比较差的食物？"
                    android:layout_marginTop="@dimen/x20"/>

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x30"
                    android:layout_marginBottom="@dimen/x20"></ListView>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x49"
        android:textColor="@color/white"
        android:text="发表评价"
        android:gravity="center"
        android:textSize="17sp"
        android:layout_alignParentBottom="true"
        android:background="@color/bg_festival"
        />

</RelativeLayout>