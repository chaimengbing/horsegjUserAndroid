<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_address"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/x15"
    android:layout_marginRight="@dimen/x15"
    android:background="@drawable/address_bg_color"
    android:visibility="visible">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/confirm_order_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/x20"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginTop="@dimen/x20"
            android:background="@drawable/icon_order_user_address" />

        <TextView
            android:id="@+id/top_address_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x5"
            android:textStyle="bold"
            android:layout_toRightOf="@id/confirm_order_position"
            android:text="@string/confirm_order_no_address"
            android:textColor="@color/color_3"
            android:textSize="18sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/address_right_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/x15"
        android:src="@drawable/arrow_right_gray" />

    <RelativeLayout
        android:id="@+id/top_address_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingBottom="@dimen/x15"
        android:paddingTop="@dimen/x15"
        android:visibility="gone">

        <TextView
            android:id="@+id/address_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/x25"
            android:layout_marginRight="@dimen/x25"
            android:layout_marginTop="@dimen/x10"
            android:ellipsize="middle"
            android:singleLine="true"
            android:text="华杰大厦大钟寺13号四道口路"
            android:textColor="@color/color_3"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/address_description"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/address_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="任金鹏"
                android:textColor="@color/color_3"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/address_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x5"
                android:layout_toRightOf="@id/address_name"
                android:text="先生"
                android:textColor="@color/color_3"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/address_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x15"
                android:layout_toRightOf="@id/address_sex"
                android:text="18501967780"
                android:textColor="@color/color_3"
                android:textSize="11sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/address_iv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/address_icon_edit"
            android:padding="@dimen/x10"
            android:visibility="gone" />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x3"
        android:layout_alignParentBottom="true"
        android:progressDrawable="@drawable/order_address_bottom_unit"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/common_gray_line" />

</RelativeLayout>