<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/x15">

        <com.project.mgjandroid.ui.view.CornerImageView
            android:id="@+id/yellow_page_image"
            android:layout_width="@dimen/x55"
            android:layout_height="@dimen/x55"
            android:src="@drawable/horsegj_default"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            app:borderRadius="@dimen/x4"
            app:type="round" />

        <ImageView
            android:id="@+id/yellow_page_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_right_gray"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/yellow_page_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/yellow_page_arrow"
            android:text="距离"
            android:textColor="@color/color_6"
            android:textSize="11sp"
            android:layout_alignBottom="@id/yellow_page_image" />

        <TextView
            android:id="@+id/yellow_page_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/yellow_page_image"
            android:layout_toLeftOf="@id/yellow_page_arrow"
            android:layout_marginRight="@dimen/x15"
            android:layout_marginLeft="@dimen/x15"
            android:textSize="15sp"
            android:text="标题"
            android:textColor="@color/color_3" />

        <TextView
            android:id="@+id/yellow_page_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/yellow_page_image"
            android:layout_toLeftOf="@id/yellow_page_distance"
            android:layout_alignBottom="@id/yellow_page_image"
            android:layout_marginRight="@dimen/x15"
            android:layout_marginLeft="@dimen/x15"
            android:textSize="15sp"
            android:text="详情"
            android:textColor="@color/color_3" />
    </RelativeLayout>

</LinearLayout>