<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/redbag_dialog"
    android:layout_width="match_parent"
    android:layout_height="506dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dialog_redbag_close"
            android:layout_gravity="right" />

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/x8"
            android:layout_marginBottom="@dimen/x25"
            android:paddingRight="17dp"
            android:paddingLeft="17dp"
            android:background="@drawable/red_bag_bg"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginTop="@dimen/x120"
                android:textSize="10sp"
                android:textColor="@color/color_3"
                android:text="红包已放入账户中，请在【我的红包】页查看"
                android:gravity="center"
                android:paddingTop="@dimen/x4" />

            <ListView
                android:id="@+id/list_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="@dimen/x8"
                android:dividerHeight="@dimen/x8"
                android:divider="@color/transparent"
                android:scrollbars="none" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:text="恭喜获得红包，可抵扣在线支付时的订单金额"
                android:gravity="center"
                android:paddingBottom="@dimen/x4"
                android:layout_alignParentBottom="true" />

        </LinearLayout>

        <ImageView
            android:id="@+id/sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/dialog_redbag_use_btn" />

    </LinearLayout>

</FrameLayout>