<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/common_top_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/white">

        <ImageView
            android:id="@+id/common_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:contentDescription="@string/back"
            android:paddingLeft="@dimen/x10"
            android:paddingRight="@dimen/x10"
            android:src="@drawable/icon_back_black" />

        <TextView
            android:id="@+id/common_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:ellipsize="end"
            android:gravity="start"
            android:maxLength="13"
            android:singleLine="true"
            android:text="退款详情"
            android:textColor="@color/color_3"
            android:textSize="@dimen/title_bar_text_size" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_order_state1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x48"
        android:layout_marginTop="@dimen/x10"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x3">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:paddingLeft="@dimen/x25"
                android:paddingRight="@dimen/x25">

                <View
                    android:layout_width="@dimen/x1"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/common_gray_line"
                    android:visibility="invisible" />

                <View
                    android:layout_width="@dimen/x1"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="#f90" />

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/refund" />

        </RelativeLayout>


        <TextView
            android:id="@+id/tv_status_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/x15"
            android:layout_weight="1"
            android:text="退款申请成功"
            android:textColor="@color/color_3"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_status_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/x15"
            android:textColor="@color/color_9"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_order_state2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x48"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x3">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:paddingLeft="@dimen/x25"
                android:paddingRight="@dimen/x25">

                <View
                    android:layout_width="@dimen/x1"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="#f90" />

                <View
                    android:id="@+id/view_line2"
                    android:layout_width="@dimen/x1"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/common_gray_line" />

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_status_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/unrefund" />

        </RelativeLayout>


        <TextView
            android:id="@+id/tv_status_name_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/x15"
            android:layout_weight="1"
            android:text="系统处理中"
            android:textColor="@color/color_3"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_status_time_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/x15"
            android:textColor="@color/color_9"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_order_state3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x48"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x3">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:paddingLeft="@dimen/x25"
                android:paddingRight="@dimen/x25">

                <View
                    android:id="@+id/view_line3"
                    android:layout_width="@dimen/x1"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/common_gray_line" />

                <View
                    android:layout_width="@dimen/x1"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/common_gray_line"
                    android:visibility="invisible" />

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_status_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/unrefund" />

        </RelativeLayout>


        <TextView
            android:id="@+id/tv_status_name_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/x15"
            android:layout_weight="1"
            android:text="退款成功"
            android:textColor="@color/color_3"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_status_time_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/x15"
            android:textColor="@color/color_9"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x10"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/x15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单编号"
            android:textColor="@color/color_3"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="0"
            android:textColor="@color/color_3"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_order_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/x15"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交易流水号"
            android:textColor="@color/color_3"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="0"
            android:textColor="@color/color_3"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x10"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/x15">

        <TextView
            android:id="@+id/tv_refund_thirdparty_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退回至第三方"
            android:textColor="@color/color_3"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_refund_thirdparty_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="¥ 0"
            android:textColor="@color/color_3"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/x15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退回到余额"
            android:textColor="@color/color_3"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_refund_balance_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="¥ 0"
            android:textColor="@color/color_3"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="end"
        android:orientation="horizontal"
        android:paddingTop="@dimen/x15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="退款金额："
            android:textColor="@color/color_3"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_refund_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x15"
            android:text="¥0"
            android:textColor="#f90"
            android:textSize="15sp" />

    </LinearLayout>

</LinearLayout>