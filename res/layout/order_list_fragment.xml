<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/title_bar_height">

        <RelativeLayout
            android:id="@+id/orderlist_fragment_layout_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="@dimen/x10"
            android:visibility="gone">

            <ImageView
                android:id="@+id/orderlist_fragment_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_close"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/orderlist_fragment_into"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_into"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x6"
                android:layout_toLeftOf="@id/orderlist_fragment_into"
                android:layout_toRightOf="@id/orderlist_fragment_close"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/also_has"
                    android:textColor="@color/gray_txt"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@color/org_yellow"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_fragment_content"
                    android:textColor="@color/gray_txt"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/org_yellow"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_fragment_score"
                    android:textColor="@color/gray_txt"
                    android:textSize="12sp" />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/orderlist_fragment_layout_tips"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x42"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/x15"
                android:paddingRight="@dimen/x15">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tab_1"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingTop="@dimen/x2"
                        android:text="全部"
                        android:textColor="@color/title_bar_bg"
                        android:textSize="14sp" />

                    <View
                        android:id="@+id/line_1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x2"
                        android:background="@color/title_bar_bg" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tab_2"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingTop="@dimen/x2"
                        android:text="待付款"
                        android:textColor="@color/color_3"
                        android:textSize="14sp" />

                    <View
                        android:id="@+id/line_2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x2"
                        android:background="@color/title_bar_bg"
                        android:visibility="invisible" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tab_3"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingTop="@dimen/x2"
                        android:text="待使用"
                        android:textColor="@color/color_3"
                        android:textSize="14sp" />

                    <View
                        android:id="@+id/line_3"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x2"
                        android:background="@color/title_bar_bg"
                        android:visibility="invisible" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tab_4"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingTop="@dimen/x2"
                        android:text="待评价"
                        android:textColor="@color/color_3"
                        android:textSize="14sp" />

                    <View
                        android:id="@+id/line_4"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x2"
                        android:background="@color/title_bar_bg"
                        android:visibility="invisible" />

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tab_5"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingTop="@dimen/x2"
                        android:text="退款"
                        android:textColor="@color/color_3"
                        android:textSize="14sp" />

                    <View
                        android:id="@+id/line_5"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x2"
                        android:background="@color/title_bar_bg"
                        android:visibility="invisible" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_e" />

        </LinearLayout>

        <com.project.mgjandroid.ui.view.newpulltorefresh.PullToRefreshListView
            android:id="@+id/orderlist_fragment_listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tab_layout"
            android:cacheColorHint="#00000000"
            android:divider="#19000000"
            android:dividerHeight="0dp"
            android:fadingEdge="none"
            android:fastScrollEnabled="false"
            android:footerDividersEnabled="false"
            android:headerDividersEnabled="false"
            android:listSelector="@android:color/transparent"
            android:scrollbarThumbVertical="@drawable/xg_scrollbar" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/orderlist_fragment_state_abnormal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/title_bar_height"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/orderlist_fragment_state_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x90"
            android:src="@drawable/has_no_net" />

        <TextView
            android:id="@+id/orderlist_fragment_state_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x18"
            android:text="@string/net_abnormal"
            android:textColor="#ada9a6"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/orderlist_fragment_state_deal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x98"
            android:layout_marginRight="@dimen/x98"
            android:layout_marginTop="@dimen/x40"
            android:background="@drawable/shap_corner_red_bg"
            android:gravity="center"
            android:padding="@dimen/x12"
            android:text="@string/reload"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/order_filter_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/title_bar_height"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/x15"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/order_type_all"
                    android:layout_width="@dimen/x90"
                    android:layout_height="@dimen/x30"
                    android:background="@drawable/shap_orange_range_bg"
                    android:gravity="center"
                    android:text="全部订单"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/order_type_waimai"
                    android:layout_width="@dimen/x90"
                    android:layout_height="@dimen/x30"
                    android:background="@drawable/shap_gray_range_bg"
                    android:gravity="center"
                    android:text="外卖"
                    android:textColor="@color/color_3"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/order_type_supermarket"
                    android:layout_width="@dimen/x90"
                    android:layout_height="@dimen/x30"
                    android:background="@drawable/shap_gray_range_bg"
                    android:gravity="center"
                    android:text="商超"
                    android:textColor="@color/color_3"
                    android:textSize="13sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x10"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/order_type_group"
                    android:layout_width="@dimen/x90"
                    android:layout_height="@dimen/x30"
                    android:background="@drawable/shap_gray_range_bg"
                    android:gravity="center"
                    android:text="拼团"
                    android:textColor="@color/color_3"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/order_type_car_hailing"
                    android:layout_width="@dimen/x90"
                    android:layout_height="@dimen/x30"
                    android:background="@drawable/shap_gray_range_bg"
                    android:gravity="center"
                    android:text="约车"
                    android:textColor="@color/color_3"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/order_type_group_buying"
                    android:layout_width="@dimen/x90"
                    android:layout_height="@dimen/x30"
                    android:background="@drawable/shap_gray_range_bg"
                    android:gravity="center"
                    android:text="团购"
                    android:textColor="@color/color_3"
                    android:textSize="13sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/filter_shadow_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/order_filter_layout"
        android:visibility="gone" />

    <GridView
        android:id="@+id/gd_order_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/title_bar_height"
        android:background="@drawable/bg_order_type_gride"
        android:listSelector="@color/white"
        android:numColumns="3"
        android:padding="@dimen/x15"
        android:verticalSpacing="@dimen/x8"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/orderlist_fragment_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@drawable/title_bar_bg">

        <TextView
            android:id="@+id/orderlist_fragment_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:singleLine="true"
            android:text="全部订单"
            android:textColor="@color/title_tv_festival"
            android:textSize="@dimen/title_bar_text_size" />

        <ImageView
            android:id="@+id/orderlist_fragment_tv_title_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x4"
            android:layout_toRightOf="@id/orderlist_fragment_tv_title"
            android:background="@drawable/location_down_arrow" />

    </RelativeLayout>

</RelativeLayout>