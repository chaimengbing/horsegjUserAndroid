<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="@dimen/x20"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/product_name"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:text="3.8"
            android:textSize="16sp"
            android:textColor="@color/color_3"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/goods_item_tv_rmb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Â¥"
                android:textColor="@color/color_3"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/goods_item_tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/goods_item_tv_rmb"
                android:layout_marginRight="@dimen/x37"
                android:textColor="@color/color_3"
                android:textSize="18sp"
                 />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/goods_item_img_minus"
                android:layout_width="@dimen/x22"
                android:layout_height="@dimen/x22"
                android:layout_toLeftOf="@+id/goods_item_tv_buy_count"
                android:layout_marginRight="@dimen/x5"
                android:background="@drawable/ic_cd_reduce"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/goods_item_tv_buy_count"
                android:layout_width="@dimen/x26"
                android:layout_height="@dimen/x20"
                android:gravity="center"
                android:text="0"
                android:layout_toLeftOf="@+id/goods_item_img_add"
                android:layout_marginRight="@dimen/x5"
                android:textColor="@color/color_3"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/goods_item_img_add"
                android:layout_width="@dimen/x22"
                android:layout_height="@dimen/x22"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_cd_add" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>