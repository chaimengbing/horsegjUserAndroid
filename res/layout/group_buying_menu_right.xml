<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_e5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x10"
            android:text="商家服务"
            android:textColor="@color/color_3"
            android:textSize="14sp" />

        <GridView
            android:id="@+id/group_buying_menu_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="4"
            android:cacheColorHint="@color/transparent"
            android:fadingEdge="none"
            android:dividerHeight="1px"
            android:horizontalSpacing="@dimen/x10"
            android:verticalSpacing="@dimen/x10"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:listSelector="@color/transparent" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_e5"
            android:layout_marginTop="@dimen/x10" />

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/x10"
            android:paddingBottom="@dimen/x10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/group_buying_menu_clear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/x10"
                android:paddingTop="@dimen/x5"
                android:paddingBottom="@dimen/x5"
                android:gravity="center"
                android:textColor="@color/gray_txt"
                android:textSize="14sp"
                android:text="重置"
                android:background="@drawable/white_and_gray_button_selector" />

            <TextView
                android:id="@+id/group_buying_menu_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                android:paddingTop="@dimen/x5"
                android:paddingBottom="@dimen/x5"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:text="确定"
                android:background="@drawable/bg_login_orange_button" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_e5" />

    </LinearLayout>

    <View
        android:id="@+id/group_buying_menu_cover_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/popup_main_background" />

</LinearLayout>