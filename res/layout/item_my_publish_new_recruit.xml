<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginRight="@dimen/x15"
            android:background="@drawable/bg_white_shape_stroke"
            android:layout_marginTop="@dimen/x10">

            <RelativeLayout
                android:id="@+id/new_recruit_content_layout_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.project.mgjandroid.ui.view.RoundImageView
                    android:id="@+id/new_recruit_user_avatar"
                    android:layout_width="@dimen/x80"
                    android:layout_height="@dimen/x80"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x15"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sir_default_icon"
                    android:visibility="gone" />


                <LinearLayout
                    android:id="@+id/new_recruit_content_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/new_recruit_user_avatar"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/x15"
                    android:paddingTop="@dimen/x15"
                    android:paddingRight="@dimen/x15">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/new_recruit_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="川菜厨师"
                            android:textColor="@color/color_3"
                            android:paddingRight="@dimen/x20"
                            android:textSize="15sp" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x12"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/new_recruit_salary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3000-5000元/月"
                            android:textColor="@color/pintuan_red"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/new_recruit_user_introduce"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="姓名/年龄/学历/经验"
                            android:textColor="@color/color_6"
                            android:textSize="13sp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/new_recruit_is_top"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="已置顶"
                            android:textColor="@color/green"
                            android:textSize="13sp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/new_recruit_company_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:gravity="right"
                            android:text="2016.10.11"
                            android:textColor="@color/color_9"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x12"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/x15"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/new_recruit_update_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="更新时间:2016-02-02"
                            android:textSize="12sp"
                            android:textColor="@color/color_9"
                            android:visibility="gone" />

                        <LinearLayout
                            android:id="@+id/new_recruit_welfare_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/x2"
                                android:background="@drawable/shap_org_range_bg_recruit_mark"
                                android:text="五险一金"
                                android:textColor="@color/title_bar_bg"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/x2"
                                android:background="@drawable/shap_org_range_bg_recruit_mark"
                                android:text="餐补"
                                android:textColor="@color/title_bar_bg"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/x2"
                                android:background="@drawable/shap_org_range_bg_recruit_mark"
                                android:text="交通补助"
                                android:textColor="@color/title_bar_bg"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/x2"
                                android:background="@drawable/shap_org_range_bg_recruit_mark"
                                android:text="车补"
                                android:textColor="@color/title_bar_bg"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="…"
                                android:textColor="@color/title_bar_bg" />

                        </LinearLayout>


                    </LinearLayout>

                    <!--<View-->
                    <!--android:id="@+id/new_recruit_company_line"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="2px"-->
                    <!--android:background="@drawable/shape_dashed"-->
                    <!--android:layerType="software" />-->

                    <!--<LinearLayout-->
                    <!--android:id="@+id/new_recruit_company_intro"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginBottom="@dimen/x8"-->
                    <!--android:layout_marginTop="@dimen/x8"-->
                    <!--android:orientation="horizontal">-->

                    <!--<TextView-->
                    <!--android:id="@+id/new_recruit_company_name"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="江西赛宝"-->
                    <!--android:textColor="@color/color_9"-->
                    <!--android:textSize="13sp" />-->

                    <!--<TextView-->
                    <!--android:id="@+id/new_recruit_company_type"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:gravity="right"-->
                    <!--android:text="私企"-->
                    <!--android:textColor="@color/color_9"-->
                    <!--android:textSize="13sp" />-->

                    <!--</LinearLayout>-->

                </LinearLayout>

            </RelativeLayout>

            <View
                android:id="@+id/my_publish_bottom_line"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@drawable/shape_dashed"
                android:layerType="software"
                android:layout_below="@id/new_recruit_content_layout_new"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/my_publish_bottom_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x8"
                android:layout_below="@id/my_publish_bottom_line"
                android:layout_marginBottom="@dimen/x8"
                android:paddingRight="@dimen/x15"
                android:gravity="right"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/my_publish_republic"
                    android:layout_width="@dimen/x70"
                    android:layout_height="@dimen/x25"
                    android:text="重新发布"
                    android:gravity="center"
                    android:background="@drawable/shap_gray_range_bg"
                    android:textColor="@color/color_9"
                    android:textSize="13sp" />

            </LinearLayout>

            <View
                android:id="@+id/my_publish_pay_line"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@drawable/shape_dashed"
                android:layerType="software"
                android:layout_below="@id/new_recruit_content_layout_new"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/my_publish_pay_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x8"
                android:layout_below="@id/my_publish_bottom_line"
                android:layout_marginBottom="@dimen/x8"
                android:paddingRight="@dimen/x15"
                android:gravity="right"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/my_publish_toPay"
                    android:layout_width="@dimen/x70"
                    android:layout_height="@dimen/x25"
                    android:text="去支付"
                    android:gravity="center"
                    android:background="@drawable/shap_red_range_bg"
                    android:textColor="@color/red"
                    android:textSize="13sp" />

            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_more_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/x8"
            android:layout_gravity="right|top"
            android:layout_marginTop="@dimen/x15"
            android:layout_marginRight="@dimen/x25"
            android:visibility="visible"
            android:src="@drawable/my_publish_delete"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/my_publish_recruit_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/x65"
            android:layout_marginTop="@dimen/x35"
            android:visibility="visible"
            android:src="@drawable/info_checking" />

        <LinearLayout
            android:id="@+id/setting_layout"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/x20"
            android:layout_marginRight="@dimen/x65"
            android:layout_toLeftOf="@id/iv_more_setting"
            android:background="#A9000000"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_refresh"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:text="刷新"
                android:paddingLeft="@dimen/x18"
                android:paddingRight="@dimen/x18"
                android:layout_gravity="center"
                android:gravity="center"
                android:drawableLeft="@drawable/ic_refresh"
                android:drawablePadding="@dimen/x8" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/white" />

            <TextView
                android:id="@+id/tv_sticky"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:text="置顶"
                android:paddingLeft="@dimen/x18"
                android:paddingRight="@dimen/x18"
                android:layout_gravity="center"
                android:gravity="center"
                android:drawableLeft="@drawable/ic_sticky"
                android:drawablePadding="@dimen/x12" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/white" />

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:text="删除"
                android:paddingLeft="@dimen/x18"
                android:paddingRight="@dimen/x18"
                android:layout_gravity="center"
                android:gravity="center"
                android:drawableLeft="@drawable/ic_del"
                android:drawablePadding="@dimen/x7" />

        </LinearLayout>

    </FrameLayout>
</RelativeLayout>