<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x5"
        android:orientation="vertical">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x10" />

        <LinearLayout
            android:id="@+id/layout_news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="@dimen/x15"
            android:paddingRight="@dimen/x15">


            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x17"
                android:ellipsize="end"
                android:lineSpacingExtra="@dimen/x5"
                android:maxLines="2"
                android:text="奥斯卡刷卡老家的萨克雷声大卡萨丁发生大撒大声地阿萨德爱仕达奥所多"
                android:textColor="@color/color_3"
                android:textSize="17dp" />

            <LinearLayout
                android:id="@+id/layout_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="@dimen/x8">

                <ImageView
                    android:id="@+id/img_1"
                    android:layout_width="@dimen/x110"
                    android:layout_height="@dimen/x80"
                    android:layout_weight="1"
                    android:src="@drawable/ic_launcher" />

                <ImageView
                    android:id="@+id/img_2"
                    android:layout_width="@dimen/x110"
                    android:layout_height="@dimen/x80"
                    android:layout_marginLeft="@dimen/x8"
                    android:layout_marginRight="@dimen/x8"
                    android:layout_weight="1"
                    android:src="@drawable/ic_launcher" />

                <ImageView
                    android:id="@+id/img_3"
                    android:layout_width="@dimen/x110"
                    android:layout_height="@dimen/x80"
                    android:layout_weight="1"
                    android:src="@drawable/ic_launcher" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x20"
                android:layout_marginTop="@dimen/x8">

                <TextView
                    android:id="@+id/tv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/new_ic_location"
                    android:drawablePadding="@dimen/x4"
                    android:text="本地"
                    android:textSize="11dp"
                    android:layout_centerVertical="true"
                    android:textColor="#ff5959" />

                <TextView
                    android:id="@+id/tv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x8"
                    android:layout_toRightOf="@+id/tv_1"
                    android:text="马管家"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_9"
                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textSize="11dp"
                    android:text="2017-5-10" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/new_home_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x5"
        android:background="@drawable/new_home_page"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:textSize="12dp"
        android:paddingLeft="@dimen/x5" />
</RelativeLayout>