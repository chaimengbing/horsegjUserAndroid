<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="@dimen/x15">

        <com.project.mgjandroid.ui.view.RoundImageView
            android:id="@+id/previous_group_header_image"
            android:layout_width="@dimen/x45"
            android:layout_height="@dimen/x45"
            android:layout_marginRight="@dimen/x10"
            android:src="@drawable/default_group_user_avatar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/previous_group_header_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名字"
                android:textColor="@color/color_3"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/previous_group_header_benefit_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x9"
                android:text="受益人数 1000"
                android:textColor="@color/color_9"
                android:textSize="11sp" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/previous_group_header_user_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_6"
        android:textSize="13sp"
        android:background="@color/white"
        android:text="个人介绍：萨芬哈哈ioqhafkfji似的进攻isjisdfafklajhs safn goo"
        android:paddingLeft="@dimen/x15"
        android:paddingRight="@dimen/x15"
        android:paddingBottom="@dimen/x15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/x15"
        android:layout_marginTop="@dimen/x10"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/previous_group_header_total_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/color_3"
            android:textSize="12sp"
            android:text="全部商品(5)" />

        <TextView
            android:id="@+id/previous_group_header_sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_6"
            android:textSize="12sp"
            android:paddingRight="@dimen/x8"
            android:text="默认排序" />

        <ImageView
            android:id="@+id/previous_group_header_sort_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/previous_sort_arrow" />
    </LinearLayout>

</LinearLayout>