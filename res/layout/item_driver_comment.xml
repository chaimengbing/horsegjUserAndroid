<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <com.project.mgjandroid.ui.view.RoundImageView
            android:id="@+id/driver_comment_user_header"
            android:layout_width="@dimen/x35"
            android:layout_height="@dimen/x35"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/x5"
            android:layout_marginRight="@dimen/x10"
            android:src="@drawable/user_avatar" />

        <TextView
            android:id="@+id/driver_comment_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/driver_comment_user_header"
            android:layout_marginTop="@dimen/x15"
            android:textSize="15sp"
            android:textColor="@color/color_3"
            android:text="用户姓名" />

        <RatingBar
            android:id="@+id/driver_comment_user_score"
            style="@style/RatingBar.ShopGoods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x18"
            android:layout_marginLeft="@dimen/x4"
            android:layout_toRightOf="@id/driver_comment_user_name"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize="0.1" />

        <TextView
            android:id="@+id/driver_comment_user_tv_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x2"
            android:layout_marginTop="@dimen/x18"
            android:layout_toRightOf="@id/driver_comment_user_score"
            android:includeFontPadding="false"
            android:visibility="gone"
            android:text=""
            android:textColor="@color/orange_text"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/driver_comment_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x17"
            android:layout_toRightOf="@id/driver_comment_user_tv_score"
            android:layout_marginRight="@dimen/x10"
            android:text="评价时间"
            android:gravity="right"
            android:textColor="@color/color_9"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/driver_comment_user_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/driver_comment_user_header"
            android:layout_marginTop="@dimen/x15"
            android:textSize="13sp"
            android:textColor="@color/color_6"
            android:layout_below="@id/driver_comment_user_name"
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:text="评价内容" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_e5" />

</LinearLayout>