<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededed"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@drawable/title_bar_bg"
        android:paddingLeft="@dimen/x10"
        android:paddingRight="@dimen/x10">

        <ImageView
            android:id="@+id/add_caution_act_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:singleLine="true"
            android:text="@string/confirm_order_remark"
            android:textColor="@color/title_tv_festival"
            android:textSize="@dimen/title_bar_text_size" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x132"
        android:layout_marginTop="@dimen/x10"
        android:background="@color/white"
        android:padding="@dimen/x12">

        <EditText
            android:id="@+id/add_caution_act_edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/caution_edit_bg"
            android:gravity="top|left"
            android:hint="@string/caution_hint"
            android:maxLength="50"
            android:padding="@dimen/x5"
            android:textColor="@color/gray_1"
            android:textColorHint="#888888"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/add_caution_act_tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:includeFontPadding="false"
            android:padding="@dimen/x4"
            android:text="0/50个字"
            android:textColor="#888888"
            android:textSize="14sp" />

    </RelativeLayout>

    <Button
        android:id="@+id/add_caution_act_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x42"
        android:layout_marginLeft="@dimen/x12"
        android:layout_marginRight="@dimen/x12"
        android:layout_marginTop="@dimen/x30"
        android:background="@drawable/bg_login_orange_button"
        android:gravity="center"
        android:text="@string/sure"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>