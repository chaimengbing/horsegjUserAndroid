<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linear_top"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#00999999"
        android:layout_weight="1"
        android:layout_height="0dp">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_layout_full_sub"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x28"
        android:layout_alignParentBottom="true"
        android:background="#fdf9db"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_has_been_reduced"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/color_6"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_text1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="再买"
            android:textColor="@color/color_6"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_price_spread"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x5"
            android:layout_marginRight="@dimen/x5"
            android:gravity="center"
            android:text="2.15元"
            android:textColor="#d17034"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="可减"
            android:textColor="@color/color_6"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_diminishbb_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x5"
            android:layout_marginRight="@dimen/x5"
            android:gravity="center"
            android:text="15元"
            android:textColor="#d17034"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_character"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="(在线支付专享)"
            android:textColor="@color/color_6"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_add_on_items"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="【去凑单】"
            android:textColor="#d17034"
            android:textSize="12sp"
            android:visibility="gone"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/linear_center"
        android:layout_width="match_parent"
        android:padding="@dimen/x10"
        android:background="#ebecee"
        android:layout_height="@dimen/x42">

        <View
            android:id="@+id/view"
            android:layout_width="@dimen/x3"
            android:layout_height="match_parent"
            android:background="@color/title_bar_bg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shopping_cat"
            android:textColor="#868887"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/view"
            android:layout_marginLeft="@dimen/x10" />

        <TextView
            android:id="@+id/tv_clear_goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clear_all"
            android:textColor="#868887"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <ListView
        android:id="@+id/commercial_cart_list_view"
        android:layout_width="match_parent"
        android:divider="@color/common_gray_line"
        android:dividerHeight="1px"
        android:scrollbars="none"
        android:layout_height="wrap_content"
        android:background="@color/white">

    </ListView>

</LinearLayout>