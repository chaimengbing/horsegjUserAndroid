            <corners android:radius="3dp" />
            <solid android:color="#fc4a3e" />
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="3dp" />
            <solid android:color="#fc4a3e" />
        </shape>
    </item>
</selector>