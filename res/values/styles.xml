<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="ThemeSplash" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@drawable/start_page_bg</item>
    </style>

    <style name="Theme.AppTheme" parent="android:style/Theme.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/myact</item>
    </style>

    <style name="myact">
        <item name="android:activityOpenEnterAnimation">@anim/common_in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/common_out_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/unhold</item>
        <item name="android:activityCloseExitAnimation">@anim/unfade</item>
    </style>

    <style name="RatingBar.Grey" parent="@android:style/Widget.RatingBar">
        <item name="android:maxHeight">15.0dip</item>

        <item name="android:progressDrawable">@drawable/rating_bar_grey_bg</item>
        <item name="android:minHeight">15.0dip</item>
    </style>

    <style name="PopupWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>
        <item name="android:windowExitAnimation">@anim/pophidden_anim</item>
    </style>

    <style name="MenuDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="MenuDialogAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="chooseSpecDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="chooseAddressDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/popup_main_background</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="fullDialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:background">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <declare-styleable name="SegmentedGroup">
        <attr name="corner_radius" format="dimension" />
        <attr name="border_width2" format="dimension" />
        <attr name="tint_color" format="color" />
        <attr name="checked_text_color" format="color" />
    </declare-styleable>

    <style name="RadioButton">
        <item name="android:textColor">@drawable/button_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="ActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/action_button_height</item>
        <item name="android:minWidth">@dimen/action_button_min_width</item>
        <item name="android:paddingLeft">@dimen/action_button_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/action_button_padding_horizontal</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textSize">@dimen/action_button_text_size</item>
    </style>

    <style name="RatingBar.EvaluateAll" parent="@android:style/Widget.RatingBar">
        <item name="android:maxHeight">24.0dip</item>

        <item name="android:progressDrawable">@drawable/rating_bar_evaluate_all</item>
        <item name="android:minHeight">24.0dip</item>
    </style>

    <style name="RatingBar.EvaluateDriver" parent="@android:style/Widget.RatingBar">
        <item name="android:maxHeight">24.0dip</item>

        <item name="android:progressDrawable">@drawable/rating_bar_evaluate_all</item>
        <item name="android:minHeight">24.0dip</item>
    </style>

    <style name="RatingBar.EvaluateGoods" parent="@android:style/Widget.RatingBar">
        <item name="android:maxHeight">24.0dip</item>

        <item name="android:progressDrawable">@drawable/rating_bar_evaluate_goods</item>
        <item name="android:minHeight">24.0dip</item>
    </style>

    <style name="RatingBar.ShopGoods" parent="@android:style/Widget.RatingBar">
        <item name="android:maxHeight">12dp</item>
        <item name="android:progressDrawable">@drawable/rating_bar_shop_goods</item>
        <item name="android:minHeight">12dp</item>
    </style>

    <style name="RatingBar.GroupEvaluate" parent="@android:style/Widget.RatingBar">
        <item name="android:maxHeight">14dp</item>

        <item name="android:progressDrawable">@drawable/rating_bar_evaluate_group_total</item>
        <item name="android:minHeight">14dp</item>
    </style>


    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        - <!--  边框 -->
        <item name="android:windowIsFloating">true</item>
        - <!--  是否浮现在activity之上 -->
        <item name="android:backgroundDimEnabled">false</item>
        - <!--  模糊 -->
        <item name="android:windowIsTranslucent">false</item>
        - <!--  半透明 -->
        <item name="android:windowNoTitle">true</item>
        - <!--  无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        - <!--  背景透明 -->
    </style>

    <style name="divider_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/divider_line_color</item>
    </style>

    <style name="horizontal_divider_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/common_gray_line</item>
    </style>

    <style name="publish_vertical_divider_line">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/common_gray_line</item>
        <item name="android:layout_marginLeft">@dimen/x10</item>
        <item name="android:layout_marginRight">@dimen/x10</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="CustomProgressDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="animScale">
        <item name="android:windowExitAnimation">@anim/scale_out</item>
    </style>

    <style name="AppThemeFullscreen" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>
